<h1>New role</h1>

<% form_for(@role) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :user %><br />
    <%= f.text_field :user %>
  </p>
  <p>
    <%= f.label :permission %><br />
    <%= f.text_field :permission %>
  </p>
  <p>
    <%= f.label :template %><br />
    <%= f.text_field :template %>
  </p>
  <p>
    <%= f.label :conditions %><br />
    <%= f.text_field :conditions %>
  </p>
  <p>
    <%= f.label :admin_approved %><br />
    <%= f.check_box :admin_approved %>
  </p>
  <p>
    <%= f.label :request_comment %><br />
    <%= f.text_field :request_comment %>
  </p>
  <p>
    <%= f.submit "Create" %>
  </p>
<% end %>

<%= link_to 'Back', roles_path %>
