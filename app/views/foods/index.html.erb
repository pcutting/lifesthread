<h1>Listing foods</h1>

<table>
  <tr>
    <th>Category</th>
    <th>Subcategory</th>
    <th>Name</th>
    <th>Calories per serving</th>
    <th>Protein</th>
    <th>Fiber</th>
    <th>Simple carbs</th>
    <th>Complex carbs</th>
    <th>Monounsaturated fats</th>
    <th>Polyunsaturated fats</th>
    <th>Saturated fats</th>
    <th>Meal</th>
    <th>Date</th>
    <th>Comment</th>
  </tr>

<% for food in @foods %>
  <tr>
    <td><%=h food.category %></td>
    <td><%=h food.subcategory %></td>
    <td><%=h food.name %></td>
    <td><%=h food.calories_per_serving %></td>
    <td><%=h food.protein %></td>
    <td><%=h food.fiber %></td>
    <td><%=h food.simple_carbs %></td>
    <td><%=h food.complex_carbs %></td>
    <td><%=h food.monounsaturated_fats %></td>
    <td><%=h food.polyunsaturated_fats %></td>
    <td><%=h food.saturated_fats %></td>
    <td><%=h food.meal %></td>
    <td><%=h food.date %></td>
    <td><%=h food.comment %></td>
    <td><%= link_to 'Edit', edit_food_path(food) %></td>
  </tr>
<% end %>
</table>

<br />

