<h1>Listing permissions</h1>

<table>
  <tr>
    <th>User</th>
    <th>Authorized user</th>
    <th>Role</th>
    <th>Subject</th>
  </tr>

<% for permission in @permissions %>
  <tr>
    <td><%=h permission.user %></td>
    <td><%=h permission.authorized_user_id %></td>
    <td><%=h permission.role %></td>
    <td><%=h permission.subject %></td>
    <td><%= link_to 'Show', permission %></td>
    <td><%= link_to 'Edit', edit_permission_path(permission) %></td>
    <td><%= link_to 'Destroy', permission, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New permission', new_permission_path %>
