<h1>New illness entry</h1>

<% form_for(@illness_history) do |f| %>
  <%= f.error_messages %>


  <p>
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </p>
  <p>
    <%= f.label :has %><br />
    <%= f.check_box :has %>
  </p>
  <p>
    <%= f.label :controlled %><br />
    <%= f.check_box :controlled %>
  </p>
  <p>
    <%= f.label :at_risk %><br />
    <%= f.check_box :at_risk %>
  </p>
  <p>
    <%= f.label :in_family_history %><br />
    <%= f.check_box :in_family_history %>
  </p>
  <p>
    <%= f.label :concerned_about %><br />
    <%= f.check_box :concerned_about %>
  </p>
  <p>
    <%= f.label :comment %><br />
    <%= f.text_field :comment %>
  </p>
  <p>
    <%= f.submit "Create" %>
  </p>
<% end %>

<%= link_to 'Back', illness_histories_path %>
