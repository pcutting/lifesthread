<h1>Body Measurements</h1>

<%= render :partial => "chart" %>

<%= render :partial => "new_inform" %>

<table>
  <tr>
    <th>Weight</th>
    <th>Resting metabolism</th>
    <th>Fat %</th>
    <th>Muscle %</th>
    <th>Visceral fat</th>
    <th>Water %</th>
    <th>Chest</th>
    <th>Pectoral</th>
    <th>Bicep left</th>
    <th>Bicep right</th>
    <th>Belly</th>
    <th>Hip</th>
    <th>Lower hip</th>
    <th>Thigh left</th>
    <th>Thigh right</th>
    <th>Measured on</th>
    <th>Is Goal</th>
    <th>Comment</th>
  </tr>

<% for measurement in @measurements %>
  <tr>
    <td><%=h measurement.weight %></td>
    <td><%=h measurement.resting_metabolism %></td>
    <td><%=h measurement.fat_percent %></td>
    <td><%=h measurement.muscle_percent %></td>
    <td><%=h measurement.visceral_fat %></td>
    <td><%=h measurement.water_percent %></td>
    <td><%=h measurement.chest %></td>
    <td><%=h measurement.pectoral %></td>
    <td><%=h measurement.bicep_left %></td>
    <td><%=h measurement.bicep_right %></td>
    <td><%=h measurement.belly %></td>
    <td><%=h measurement.hip %></td>
    <td><%=h measurement.lower_hip %></td>
    <td><%=h measurement.thigh_left %></td>
    <td><%=h measurement.thigh_right %></td>
    <td><%=h measurement.measured_on %></td>
    <td><%=h measurement.is_goal %></td>
    <td><%=h measurement.comment %></td>
    <td><%= link_to 'Edit', edit_measurement_path(measurement) %></td>
    <td><%= link_to 'Destroy', measurement, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New measurement', new_measurement_path %>
