<td class= "dashboard" > <%= f.text_field :thigh_right, :size => 4  %> </td>
</tr>

<tr>
<th class = "dashboard" colspan = 4 > <%= f.label :measured_on %> </th>
<th class = "dashboard" colspan = 3> <%= f.label :comment %> </th>
<th class = "dashboard" colspan = 2> <%= f.label :is_goal %>*</th>

</tr>

<tr>
<td class= "dashboard" colspan = 4> <%= f.datetime_select :measured_on, :start_year => 1900, :include_seconds => true  %>  </td>
<td class= "dashboard" colspan = 3> <%= f.text_field :comment %> </td>
<td class = "dashboard" class = "star" colspan = 2 >  <%= f.check_box :is_goal %> </td>
</tr>

</table>

