<td class= "dashboard" > <%= f.text_field :fat_percent , :size => 4  %> </td>
<td class= "dashboard" > <%= f.text_field :muscle_percent , :size => 4 %> </td>
<td class= "dashboard" > <%= f.text_field :visceral_fat , :size => 4 %> </td>
<td class= "dashboard" > <%= f.text_field :water_percent , :size => 4 %>  </td>
</tr>

<tr>
<th class = "dashboard" > <%= f.label :chest   %><!-- was a br --> </th>
<th class = "dashboard" > <%= f.label :pectoral%><!-- was a br --> </th>
<th class = "dashboard" > <%= f.label :bicep_left  %> </th>
<th class = "dashboard" > <%= f.label :bicep_right  %> </th>
<th class = "dashboard" > <%= f.label :belly%> </th>
<th class = "dashboard" > <%= f.label :hip  %> </th>
<th class = "dashboard" > <%= f.label :lower_hip  %> </th>
<th class = "dashboard" > <%= f.label :thigh_left  %> </th>
<th class = "dashboard" > <%= f.label :thigh_right  %> </th>

</tr>

<tr>
<td class= "dashboard" > <%= f.text_field :chest , :size => 4 %>  </td>
