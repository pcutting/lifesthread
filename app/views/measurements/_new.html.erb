<table class = "dashboard">

<tr>
<th class = "dashboard" > <%= f.label :weight  %> </th>
<th class = "dashboard" > <%= f.label :resting_metabolism %> </th>
<th class = "dashboard" > <%= f.label :fat_percent  %> </th>
<th class = "dashboard" > <%= f.label :muscle_percent %> </th>
<th class = "dashboard" > <%= f.label :visceral_fat %> </th>
<th class = "dashboard" > <%= f.label :water_percent  %> </th>
