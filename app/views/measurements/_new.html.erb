<tr>
<td class= "dashboard"><%= f.text_field :weight , :size => 3 %></td>
<td class= "dashboard"><%= f.text_field :resting_metabolism , :size => 4 %></td>
<td class= "dashboard"><%= f.text_field :fat_percent , :size => 2 %></td>
<td class= "dashboard"><%= f.text_field :muscle_percent , :size => 2 %></td>
<td class= "dashboard"><%= f.text_field :visceral_fat , :size => 2 %></td>
<td class= "dashboard"><%= f.text_field :water_percent , :size => 2 %></td>
<td class= "dashboard"><%= f.text_field :chest , :size => 2 %></td>
<td class= "dashboard"><%= f.text_field :belly , :size => 2 %></td>
<td class= "dashboard"><%= f.text_field :hip , :size => 2 %></td>
<td class= "dashboard"><%= f.text_field :lowerhip, :size => 2 %></td>
<td class= "dashboard"><%= f.text_field :thigh, :size => 2 %></td>
<td class= "dashboard"><%= f.text_field :calf, :size => 2 %></td>
<td class= "dashboard"><%= f.text_field :bicep, :size => 2 %></td>
<td class= "dashboard"> 

   <%# = f.datetime_select :measured_on, :start_year => 1900, :include_seconds => true %> 
   <%= calendar_box 'measurement', 'measured_on',
    { :class => 'date',
     :date => Time.zone.now,
     :field_title => 'Measured on',
     :button_title => 'Show calendar',
     :value => Time.zone.now,
     :size => 10},
    { :firstDay => 1,
     :range => [1900, 2015],
     :step => 1,
     :showsTime => 1,
     :showOthers => true,
     :cache => true } %>
     
</td>     
<td class= "dashboard"><%= f.text_field :comment , :size => 10 %></td>

</tr>
<tr>
<td class= "dashboard" colspan = 14 > 
<% # = f.label :is_goal %> 
<%= f.check_box :is_goal %> Check here if these measurements are a goal rather then your measurements. 
</td>
</tr>

</table>

