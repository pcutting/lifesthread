<h1>New medical history record</h1>

<% form_for(@medical_history) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :approx_date %><br />
    <%= f.date_select :approx_date %>
  </p>
  <p>
    <%= f.label :hospital %><br />
    <%= f.text_field :hospital %>
  </p>
  <p>
    <%= f.label :problem %><br />
    <%= f.text_field :problem %>
  </p>
  <p>
    <%= f.label :treatment %><br />
    <%= f.text_field :treatment %>
  </p>
  <p>
    <%= f.label :doctor %><br />
    <%= f.text_field :doctor %>
  </p>
  <p>
    <%= f.label :city %><br />
    <%= f.text_field :city %>
  </p>
  <p>
    <%= f.label :state %><br />
    <%= f.text_field :state %>
  </p>
  <p>
    <%= f.label :dr_phone %><br />
    <%= f.text_field :dr_phone %>
  </p>
  <p>
    <%= f.label :required_hospitalization %><br />
    <%= f.check_box :required_hospitalization %>
  </p>
  <p>
    <%= f.submit "Create" %>
  </p>
<% end %>

<%= link_to 'Back', medical_histories_path %>
