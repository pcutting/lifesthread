<h1>Workouts</h1>

<p>
<%= link_to 'New blank workout', new_workout_path %>
</p>





<% form_for(Workout) do |f| %>

  <%= select("plan", "plan_id",  current_user.fitness_plans.collect {|p| [ p.label , p.id ] }, { :include_blank => false} ) %> 
    <%= f.submit :"Use plan" %>
<% end %>


<p></p>


<table>
  <tr>
    <th>Title</th>
    <th>Day</th>
    <th>Start time</th>
    <th>End time</th>
    <th>Supplements</th>
    <th>Comment</th>
  </tr>

<% for workout in @workouts %>
  <tr>
    <td><%=h workout.title %></td>
    <td><%=h workout.day %></td>
    <td><%=h workout.start_time.to_formatted_s(:time) unless workout.start_time.nil? %></td>
    <td><%=h workout.end_time.to_formatted_s(:time) unless workout.end_time.nil? %></td>
    <td><%=h workout.supplements %></td>
    <td><%=h workout.comment %></td>
    <td><%= link_to 'Exercises', workout_path(workout) %></td>
    <td><%= link_to 'Edit', edit_workout_path(workout) %></td>
    <td><%= link_to 'Destroy', workout, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

