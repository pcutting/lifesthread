<h3>Search All Users</h3>

<% form_tag member_users_path, :method => :get do -%>
  <div>
  <%= text_field_tag :search_terms, params[:search_terms] %>
  <%= check_box_tag 'with_deleted', true, params[:with_deleted] %> include deleted?<br/>
  <%= submit_tag 'Search', :disable_with => 'Submitting...' %>
  </div>
  <% end -%>
