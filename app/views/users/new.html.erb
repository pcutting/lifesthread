<% content_for :header do %>
  <h1>Please create your wellnessboard.</h1>
<% end %>


<em class="notes"> "Optional" : We do NOT require personal information like Surname, Social Security Number, Financial information etc.  Your privacy is sacred and we are your biggest advocates to protect all personal information.  Life's Thread primary goal is to provide you with tools that allow you to improve your Personal Wellness.</em> <br/>


<%= error_messages_for :user %>
<% form_for :user, :url => users_path do |f| -%>

<p>Please enter your Sponsor Code if available. </p>

<p><label for="sponsor">Sponsor Code</label>
<%= text_field_tag("sponsor_id", nil, :size => 10) %></p>




<p><label for="login">User Name</label>
<%= f.text_field :login , :size => 12 %></p>

<p><label for="password">Password</label>
<%= f.password_field :password , :size => 12 %></p>

<p><label for="password_confirmation">Confirm Password</label>
<%= f.password_field :password_confirmation, :size => 12  %></p>

<p><label for="email">Email</label>
<%= f.text_field :email , :size => 12  %></p>

<p><label for="first_name">First Name</label>
<%= f.text_field :first_name , :size => 12  %></p>

<p><label for="middle_name">Middle Name <small class="notes">Optional</small></label>
<%= f.text_field :middle_name , :size => 12  %></p>

<p><label for="last_name">Last Name <small class="notes">Optional</small></label>
<%= f.text_field :last_name , :size => 12 %></p>

<p><label for="zip_code">Zip Code</label>
<%= text_field_tag :zip_code, nil,  :size => 12 %></p>

<p><label for="Time Zone">Time Zone</label>
<%= f.time_zone_select :time_zone, TimeZone.us_zones ,  :size => 12  %></p>

<p><label for="Birthday">Birthday</label>
    <%= calendar_box 'profile', 'dob',
       { :class => 'date',
         :date => Date.current,
         :field_title => 'Birthday',
         :button_title => 'Show calendar' ,
         :value => Date.current,
         :size => 12 },
         
       { :firstDay => 1,
         :range => [1900, 2015],
         :step => 1,
         :showOthers => false,
         :cache => true } %>
</p>

<p><label for="Hight">Hight<small class="notes">Feet/Inches</small></label>
<%= text_field_tag("feet",  nil,  :size=> 4  ) %><%= text_field_tag("inches", nil, :size => 4) %></p>


<br/>

<p>
<%= render :partial => "terms", :locals => { :f => f } %></p>


<p><%= submit_tag "Join" %></p> 
<% end -%>

<%= link_to 'Back to Login', login_path %>
